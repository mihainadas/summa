    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: manage.py runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "8080",
                "--settings",
                "galandriel.settings.base"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": ""
        },
        {
            "name": "Python: manage.py process_tasks",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "process_tasks",
                "--settings",
                "galandriel.settings.base"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": ""
        },
        {
            "name": "Python: summa-cli.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/summa-cli.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}